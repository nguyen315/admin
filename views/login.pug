extends layout_login

block content
  .splash-container
    .card
      if messageCheckAvtive
        .alert.alert-danger(role='alert') #{messageCheckAvtive} 
      if message
        .alert.alert-danger(role='alert') #{message} 
      .card-header.text-center
        span.splash-description Please enter your user information.
      .card-body
        form(method="post" action="/login")
          .form-group
            input#username.form-control.form-control-lg(type='text' name='username' placeholder='Username' autocomplete='off' required)
          .form-group
            input#password.form-control.form-control-lg(type='password' name='password' placeholder='Password' required)
          button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
