  script(src='../public/assets/vendor/bootstrap/js/bootstrap.bundle.js')
  // slimscroll js
  script(src='../public/assets/vendor/slimscroll/jquery.slimscroll.js')
  // main js
  script(src='../public/assets/libs/js/main-js.js')
  // chart chartist js
  script(src='../public/assets/vendor/charts/chartist-bundle/chartist.min.js')
  // sparkline js
  script(src='../public/assets/vendor/charts/sparkline/jquery.sparkline.js')
  // morris js
  script(src='../public/assets/vendor/charts/morris-bundle/raphael.min.js')
  script(src='../public/assets/vendor/charts/morris-bundle/morris.js')
